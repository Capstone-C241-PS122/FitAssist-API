generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}


//rev
model article {
  id          Int    @id
  Title       String
  Description String
  Type        String
  BodyPart    String
  Equipment   String
  Level       String
  library     libraryArt @relation(fields: [], references: [])
  libraryId   Int
}

model feedback {
  id          Int    @id @default(autoincrement())
  description String
}


model libraryVid {
  id_library      Int     @id @default(autoincrement())
  type            String
  name_exercise   String?
  description     String?
  videos          video[]
}


//rev
model libraryArt {
  id_library  Int     @id @default(autoincrement())
  type        String
  Title       String
  Description String?
  articles    article[]
}

model nutrition {
  id           Int    @id
  calories     Int
  proteins     Float
  fat          Float
  carbohydrate Float
  name         String
}

model video {
  id             Int       @id
  name_exercise  String
  description    String
  name_equipment String
  url_video      String
  label          String
  library        libraryVid @relation(fields: [libraryId], references: [id])
  libraryId      Int
}