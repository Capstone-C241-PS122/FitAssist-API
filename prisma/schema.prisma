generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Article {
  id            Int @id
  Title         String
  Description   String
  Type          String 
  BodyPart      String 
  Equipment     String 
  Level         String 
}

model Nutrition {
  id            Int @id
  calories      Int 
  proteins      Float
  fat           Float
  carbohydrate  Float
  name          String
}

model Video {
  id             Int @id
  name_exercise  String
  description    String
  name_equipment String
  url_video      String
  label          String
}

//untuk tes
model Feedback {
  id            Int @id @default(autoincrement())
  description   String
}

model Library {
  id_library     Int @id @default(autoincrement())
  vidId          video @relation(fields: [vidId], references: [id]) //apa 
  type           String
  title          String
  description    String?
}

//contoh
model vehicle {
  id            String @id @default(uuid())
  analysis analysis_result[]
}

model analysis_result {
  id                Int     @id @default(autoincrement())
  vehicle           vehicle @relation(fields: [vehicleId], references: [id])
  vehicleId         String
  alert             Alert?
  path              String
  ear               Float
  mar               Float
  yawning_duration  Float
  notfocus_duration Float
  bottle_duration   Float
  phone_duration    Float
  cigarette_duration Float
  vape_duration     Float
  smoke_duration     Float
}

model Alert {
  id   String   @id @default(uuid())
  time      DateTime @default(now())
  analysis  analysis_result @relation(fields: [analysis_result_Id], references: [id])
  analysis_result_Id Int @unique
  vehicleId String
  status    String
  imgPath   String
  lat       Float   
  long      Float   
}